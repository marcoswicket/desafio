@model  IEnumerable<Stringly.Models.Guitar>
@{
    ViewBag.Title = "Guitars";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Guitars</h2>
@if (!Model.Any())
{
    <p>We don't have any guitars yet</p>
}
else
{
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th style="width: 5%">Id</th>
                <th>Guitar</th>
                <th>Guitar Specific Details</th>
                <th>Inclusion Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var guitar in Model)
            {
                <tr>
                    <td>@guitar.Id</td>
                    <td>@Html.ActionLink(guitar.Name, "Edit", "Guitars", new { id = guitar.Id }, null)</td>
                    <td>@Html.ActionLink("Details", "Details", "Guitars", new { id = guitar.Id }, null)</td>
                    <td>@guitar.InclusionDate.ToString("MM/dd/yyyy [H:mm:ss]")</td>
                </tr>
            }
        </tbody>
    </table>
}
<a href="@Url.Action("New", "Guitars")" class="btn btn-primary btn-lg">New</a>